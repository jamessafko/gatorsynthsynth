   	  /* Init the STemWin GUI Library */
  	  test = GUI_Init();
  	  GUI_Initialized = 1;

  	  /* Activate the use of memory device feature */
  	  WM_SetCreateFlags(WM_CF_MEMDEV);

  	  GUI_Clear();

  	  Createmenu1();
  	//GUI_Exec();

  	  //GRAPHICS_MainTask();


  /* USER CODE END 2 */

  /* Infinite loop */
  /* USER CODE BEGIN WHILE */
    while (1)
    {

  /* USER CODE END WHILE */

  /* USER CODE BEGIN 3 */
    	GUI_Exec();
    }
  /* USER CODE END 3 */

}

